{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "bun",
            "internalConsoleOptions": "openOnSessionStart",
            "request": "launch",
            "name": "Debug BrowserOS Server",
            "program": "src/index.ts",
            "cwd": "${workspaceFolder}/apps/server",
            "stopOnEntry": false,
            "watchMode": false,
            "env": {
                "BUN_ENV_FILE": ".env.development"
            }
        }
    ]
}
