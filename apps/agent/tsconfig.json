{
  "extends": "./.wxt/tsconfig.json",
  "compilerOptions": {
    "types": ["chrome", "bun"],
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./generated/*"]
    },
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "./generated/graphql/schema.graphql"
      }
    ]
  }
}
